{
    "name": "rosswintle/quickwp",
    "description": "The Quick CLI for making local WordPress sites.",
    "keywords": [
        "wordpress",
        "console",
        "cli"
    ],
    "homepage": "https://qwp.forwp.dev",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ross Wintle",
            "email": "ross.wintle@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.4",
        "illuminate/http": "^11.0",
        "illuminate/validation": "^11.0",
        "laravel-zero/framework": "^11.0",
        "spatie/valuestore": "^1.3"
    },
    "require-dev": {
        "laravel/pint": "^1.15.2",
        "mockery/mockery": "^1.6.11",
        "pestphp/pest": "^2.34.7"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "qwp"
    ]
}
